.footer-wrapper {
  display: flex;
  align-items: flex-end;
  height: 100px;
  width: 100%;
  background-color: #fff;

  .left-content {
    background-color: #2e2e2e;
    height: 100%;
    width: 70%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .right-content {
    min-width: 240px;
    padding: 20px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    height: 100%;
    width: 30%;
    font-size: 12px;
    font-weight: 500;
    color: $footer-text-color;

    a {
      color: $footer-text-color;
      text-decoration: underline;
    }
  }
}