.index-wrapper {

  .index-post-wrapper {
    display: flex;
    align-items: center;
    padding: 1rem 0;

    .post-image {
      // margin-right: 3px;

      img {
        width: 100%;
        height: 10rem;
        object-fit: cover;
        border-radius: 5px;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.3);
      }
    }

    .post-intro {
      display: flex;
      flex-direction: column; 
      min-height: 10rem;

      .post-header {
        display: flex;
        
        h1 {
          margin-top: 0;
          margin-bottom: 0.5rem;
        }

        i {
          transform: rotate(45deg) translate(-50%, 25%);
        }
      }

      .description {
        flex-grow: 1; 
        color: $header-text-color;
        font-weight: 500;
        padding: 0.5rem 0;
      }

      .date {
        color: $footer-text-color;
        // font-weight: 00;
      }
    }
  }
}

@media (max-width: 767px)  {
  .post-intro {
    padding-top: 1.25rem;
  }
}