<% 
  page.layout === 'categories'
  page.title = 'Category'
%>
<% let selectedCate; %>
<% site.categories %> 
<div class="row py-5">
  <div class="col">
    <h2>Category</h2>
    <div class="category-wrapper">
      <% site.categories.each(function(category) { %>
        <a class="category" href="<%= url_for(category.path) %>">
          <%= category.name %>
        </a>
      <% }) %> 
    </div>
  </div>
</div>

<% if (selectedCate) { %> 
  <div class="row py-5">
    <div class="col">
      <h2><%= selectedCate  %></h2>
      <div class="category-wrapper">
      </div>
    </div>
  </div>
<% } %> 